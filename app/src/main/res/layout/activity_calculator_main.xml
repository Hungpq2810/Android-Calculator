<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
   xmlns:tools="http://schemas.android.com/tools"
   android:layout_width="match_parent"
   android:layout_height="match_parent"
   android:gravity="bottom"
   android:orientation="vertical">

   <Button
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="History"
      android:layout_gravity="end" />

   <TextView
      android:id="@+id/tv_expression"
      style="@style/ExpressionText"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:gravity="end"
      tools:text="0" />

   <TextView
      android:id="@+id/tv_result"
      style="@style/ResultText"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:gravity="end"
      tools:text="0" />

   <GridLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:columnCount="4"
      android:orientation="horizontal"
      android:padding="@dimen/padding_small"
      android:rowCount="5">

      <!--        Row 1-->
      <Button
         android:id="@+id/btn_clear"
         style="@style/ButtonOperatorStyle"
         android:onClick="onClear"
         android:text="C" />

      <Button
         android:id="@+id/btn_open_parenthesis"
         style="@style/ButtonOperatorStyle"
         android:onClick="onOpenParenthesis"
         android:text="(" />

      <Button
         android:id="@+id/btn_close_parenthesis"
         style="@style/ButtonOperatorStyle"
         android:onClick="onCloseParenthesis"
         android:text=")" />

      <Button
         android:id="@+id/btn_divide"
         style="@style/ButtonOperatorStyle"
         android:onClick="onDivide"
         android:text="/" />


      <!--        Row 2-->

      <Button
         android:id="@+id/btn_7"
         style="@style/ButtonDigitStyle"
         android:onClick="onDigit"
         android:text="7" />

      <Button
         android:id="@+id/btn_8"
         style="@style/ButtonDigitStyle"
         android:onClick="onDigit"
         android:text="8" />

      <Button
         android:id="@+id/btn_9"
         style="@style/ButtonDigitStyle"
         android:onClick="onDigit"
         android:text="9" />

      <Button
         android:id="@+id/btn_multiply"
         style="@style/ButtonOperatorStyle"
         android:onClick="onMultiply"
         android:text="*" />

      <!--        Row 3-->

      <Button
         android:id="@+id/btn_4"
         style="@style/ButtonDigitStyle"
         android:onClick="onDigit"
         android:text="4" />

      <Button
         android:id="@+id/btn_5"
         style="@style/ButtonDigitStyle"
         android:onClick="onDigit"
         android:text="5" />


      <Button
         android:id="@+id/btn_6"
         style="@style/ButtonDigitStyle"
         android:onClick="onDigit"
         android:text="6" />

      <Button
         android:id="@+id/btn_subtract"
         style="@style/ButtonOperatorStyle"
         android:onClick="onSubtract"
         android:text="-" />

      <!--        Row 4-->

      <Button
         android:id="@+id/btn_1"
         style="@style/ButtonDigitStyle"
         android:onClick="onDigit"
         android:text="1" />

      <Button
         android:id="@+id/btn_2"
         style="@style/ButtonDigitStyle"
         android:onClick="onDigit"
         android:text="2" />

      <Button
         android:id="@+id/btn_3"
         style="@style/ButtonDigitStyle"
         android:onClick="onDigit"
         android:text="3" />

      <Button
         android:id="@+id/btn_add"
         style="@style/ButtonOperatorStyle"
         android:onClick="onAdd"
         android:text="+" />

      <!--        Row 5-->

      <Button
         android:id="@+id/btn_0"
         style="@style/ButtonDigitStyle"
         android:onClick="onDigit"
         android:text="0" />

      <Button
         android:id="@+id/btn_dot"
         style="@style/ButtonDigitStyle"
         android:onClick="onDot"
         android:text="." />

      <Button
         android:id="@+id/btn_toggle_sign"
         style="@style/ButtonDigitStyle"
         android:onClick="onToggleSign"
         android:text="+/-" />

      <Button
         android:id="@+id/btn_equals"
         style="@style/ButtonOperatorStyle"
         android:onClick="onEquals"
         android:text="=" />


   </GridLayout>


</LinearLayout>